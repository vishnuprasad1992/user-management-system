<!-- Header -->
<%- include('includes/_header') -%>
    <!-- Header -->
    <!-- Header -->
    <header class="mb-5">
        <%- include('includes/_nav-brand') -%>
    </header>
    <div class="container col-md-12 col-lg-6">
        <a href="/" class="btn btn-light fw-bold"><i class="fas fa-angle-double-left"></i><span> All Users</span></a>
    </div>
    <!-- main -->
    <main class="container">
        <h4 class="text-center">Update User</h4>
        <div class="text-center mb-5">
            <small class="text-muted ">Use below form to Update Existing User</small>
        </div>
        <form action="/api/users/<%= user._id %>" method="PUT" class="col-md-12 col-lg-6 col-sm-12 mx-auto">
            <div class="form-group mb-3">
                <input type="text" class="form-control" value="<%= user.name  %>" name="name" placeholder="Enter Name">
            </div>
            <div class="form-group mb-3">
                <input type="email" class="form-control" value="<%= user.email  %>" name="email" placeholder="Enter email">
            </div>
            <div class="mb-3">
                <span class="m-right"> Gender </span>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="<%= user.gender =='male' ? 'checked' : ''%>" name="gender" id="male">
                    <label class="form-check-label" for="male" >Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="<%= user.gender =='female' ? 'checked' : ''%>"name="gender" value="female" id="female">
                    <label class="form-check-label" for="female">Female</label>
                </div>
            </div>
            <div class="text-center">
            </div>
            <div class="mb-3">
                <span class="m-right-status "> Status </span>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="<%= user.status =='active' ? 'checked' : ''%>" name="status" id="Active">
                    <label class="form-check-label" for="Active">Active</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="<%= user.status =='incative' ? 'checked' : ''%>" name="status" id="Inactive">
                    <label class="form-check-label" for="Inactive">Inactive</label>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn px-5 btn-success" value="Save">Save</button>
            </div>
        </form>
    </main>
    <!-- main -->
    <!-- footer -->
    <%- include('includes/_footer') -%>
        <!-- footer -->